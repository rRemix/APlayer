<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/record_margin"
        android:layout_marginRight="@dimen/record_margin"
        android:layout_centerInParent="true"
        android:id="@+id/record_container"
        android:background="@drawable/note_bg">
        <remix.myplayer.ui.customview.PagerEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_record"
            android:maxLength="200"
            android:maxHeight="@dimen/d240_size"
            android:gravity="left"
            android:textColor="#916f33"
            android:textColorHint="#e2d6c1"
            android:textSize="@dimen/s14_size"
            android:hint="@string/write_something"
            android:padding="@dimen/d10_size"
            android:textCursorDrawable="@null"
            android:background="@null"/>

        <remix.myplayer.ui.customview.PagerButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/d12_size"
            android:background="@color/transparent"
            android:id="@+id/sharebtn"
            android:text="@string/record_share"
            android:textColor="#b8a179"
            android:textSize="@dimen/s14_size"/>
    </FrameLayout>


</RelativeLayout>
