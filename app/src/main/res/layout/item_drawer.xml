<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d56_size"
    android:background="@drawable/bg_drawer_day"
    android:id="@+id/item_root">
    <ImageView
        android:layout_width="@dimen/d44_size"
        android:layout_height="@dimen/d44_size"
        android:id="@+id/item_img"
        android:layout_marginLeft="@dimen/d16_size"
        android:scaleType="center"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_34353a"
        android:textSize="@dimen/s16_size"
        android:layout_marginLeft="@dimen/d70_size"
        android:layout_centerVertical="true"/>
    <android.support.v7.widget.SwitchCompat
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn=""
        android:textOff=""
        android:id="@+id/item_switch"
        android:layout_marginLeft="@dimen/d210_size"
        android:layout_centerVertical="true"/>
</RelativeLayout>